%h4 Single Answers
%div
  = label_tag :A
  = text_field_tag :A
%div
  = label_tag :B
  = text_field_tag :B
%div
  = label_tag :C
  = text_field_tag :C
%div
  = label_tag :D
  = text_field_tag :D
.form_row
  %label{for: "right_answer"} Correct Answer:
  - ['A', 'B', 'C', 'D'].each do |right_answer|
    = radio_button_tag 'right_answer', right_answer, @right_answer == right_answer
    = right_answer.humanize